<%= form_for :link, method: :create do |f| %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.submit "Add Link" %>
<% end %>
<hr>
<% if !current_user.links.nil?  %>
<% current_user.links.each do |link| %>
  <div class="id-<%= link.title.downcase %>">
    URL: <%= link.url %><br>
    Title: <%= link.title %><br>
    Read?: <%= link.read %><br>
    <%= link_to "Edit", edit_link_path(link) %>
  </div>
<hr>
<% end %>
<% end %>
