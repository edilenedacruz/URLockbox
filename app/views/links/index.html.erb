<%= form_for :link, method: :create do |f| %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.submit "Add Link" %>
<% end %>
<hr>
<% if !current_user.links.nil?  %>
  <% @links.each do |link| %>
    <div id="<%= link.id %>">
      URL: <%= link.url %><br>
      Title: <%= link.title %><br>
      Read?: <%= link.read %><br>
      <button type="button" class:"btn btn-default btn-small">Mark as Read</button>
      <%= link_to "Edit", edit_link_path(link), class:"btn btn-default btn-small" %>
    </div>
  <hr>
  <% end %>
<% end %>
