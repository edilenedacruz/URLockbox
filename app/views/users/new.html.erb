<%= form_for @user do |f| %>
  <%= f.label :email_address %><br>
  <%= f.text_field :email_address %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password%><br>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Create account" %>
<% end %>
